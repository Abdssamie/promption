{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/.agent/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save"
  ]
}